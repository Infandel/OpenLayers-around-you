{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable"],
		"allowJs": true,
		"target": "ES6",
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ES2020",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"paths": {
			"@*": ["./src/*"],
			"@shared/*": ["./src/shared/*"],
			"@entities/*": ["./src/entities/*"],
			"@features/*": ["./src/features/*"],
			"@widgets/*": ["./src/widgets/*"],
			"@pages/*": ["./src/pages/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
